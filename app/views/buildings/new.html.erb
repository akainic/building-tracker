<h2>New Building Entry</h2>

<%- if @building.errors.size > 0 -%>
  <ul class="errors">
    <%- @building.errors.full_messages.each do |error| -%>
      <li><%= error %></li>
    <%- end -%>
  </ul>
<%- end -%>

<%= form_for @building do |f| %>
  <div>
    <%= f.label :street_address %>
    <%= f.text_field :street_address %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state_id %>
    <%= f.collection_select :state_id, State.order(:state),
      :id, :state, include_blank: true %>
  </div>

  <div>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.submit 'Enter Building' %>
  </div>

<%- end -%>